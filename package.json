{
  "name": "whispr-chat",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"next dev\" \"node src/websocket-server.js\"",
    "build": "next build",
    "start": "next start -p ${PORT:-3000}",
    "lint": "next lint",
    "format": "prettier --write .",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "deploy": "vercel",
    "deploy:prod": "vercel --prod"
  },
  "dependencies": {
    "concurrently": "^9.2.0",
    "dotenv": "^16.4.5",
    "jose": "^6.0.12",
    "jsonwebtoken": "^9.0.2",
    "next": "14.0.4",
    "next-auth": "^4.24.6",
    "react": "^18",
    "react-dom": "^18",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.1.4",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.3",
    "vercel": "^34.1.1"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
